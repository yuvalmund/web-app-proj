@model RentAHouse.Models.ApartmentOwner

@{
    ViewData["Title"] = "Sign up";
}

<h1>Sign up</h1>
<head>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
</head>

<hr />
<div class="row">
    <div class="col-md-4" id="form">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="userName" class="control-label"></label>
                <input id="userName" asp-for="userName" class="form-control" />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input id="password" type="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="firstName" class="control-label"></label>
                <input id="firstName" asp-for="firstName" class="form-control" />
                <span asp-validation-for="firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastName" class="control-label"></label>
                <input id="lastName" asp-for="lastName" class="form-control" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mail" class="control-label"></label>
                <input id="mail" asp-for="mail" class="form-control" />
                <span asp-validation-for="mail" class="text-danger"></span>
            </div>
            <!--<div class="form-group">
                <label asp-for="rate" class="control-label"></label>
                <input asp-for="rate" class="form-control" />
                <span asp-validation-for="rate" class="text-danger"></span>
            </div>-->
            <div class="form-group">
                <input id="Sign" type="button" value="Create" class="btn btn-default" />
            </div>

        </form>
    </div>
    <div class="form-group" id="changer">
    </div>
</div>
<script>
    $("#Sign").click(function () {
        var userName = $('#userName').val();
        var password = $('#password').val();
        var firstName = $('#firstName').val();
        var lastName = $('#lastName').val();
        var mail = $('#mail').val();
        $.post('/ApartmentOwners/Create', { userName: userName, password: password, firstName: firstName, lastName: lastName, mail: mail }, function (data, status) {
            $("#form").hide();

            $('#changer').html(data);
        });
    });
</script>
<div>
   <!-- <a asp-action="Index">Back to List</a>-->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
