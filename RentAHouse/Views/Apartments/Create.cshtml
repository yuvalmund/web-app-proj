@model RentAHouse.Models.Apartment

@{
    ViewData["Title"] = "Create";

}
<h2>Add Apartment</h2>
<hr />
@*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>*@
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="createForm" enctype="multipart/form-data" onsubmit="send()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="city" class="control-label"></label>
                <select id="selectCity" asp-for="city" class="form-control" required></select>
                <span asp-validation-for="city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="street" class="control-label"></label>
                <input asp-for="street" class="form-control" required />
                <span asp-validation-for="street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="houseNumber" class="control-label"></label>
                <input asp-for="houseNumber" min="1" class="form-control" required />
                <span asp-validation-for="houseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="roomsNumber" class="control-label"></label>
                <input asp-for="roomsNumber" id="roomsNumber" min="1" class="form-control" required />
                <span asp-validation-for="roomsNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="size" class="control-label"></label>
                <input asp-for="size" min="0" id="size" class="form-control" required />
                <span asp-validation-for="size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cityTax" class="control-label"></label>
                <input asp-for="cityTax" min="0" class="form-control" required />
                <span asp-validation-for="cityTax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuildingTax" class="control-label"></label>
                <input asp-for="BuildingTax" min="0" class="form-control" required />
                <span asp-validation-for="BuildingTax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="isRenovatetd" id="isRenoveted" /> @Html.DisplayNameFor(model => model.isRenovatetd)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="arePetsAllowed" /> @Html.DisplayNameFor(model => model.arePetsAllowed)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="isThereElivator" id="isThereElivator" /> @Html.DisplayNameFor(model => model.isThereElivator)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="furnitureInculded" id="furnitureInculded" /> @Html.DisplayNameFor(model => model.furnitureInculded)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="EnterDate" class="control-label"></label>
                <input type="date" asp-for="EnterDate" class="form-control" required />
                <span asp-validation-for="EnterDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="floor" class="control-label"></label>
                <input asp-for="floor" min="0" class="form-control" required />
                <span asp-validation-for="floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" id="price" class="form-control" />
                <input type="button" id="suggestPriceButton" value="Suggest Price" class="btn btn-default" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
                <input type="submit" value="Create" data-toggle='modal' data-target='#shareModal' class="btn btn-default" />
            <div>

            </div>
        </form>
    </div>
</div>

<h2 id="finishMessage" class="hidden">Completed!</h2>

<div class="modal fade" id="shareModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Let your friends know about it!</h4>
            </div>
            <div class="modal-footer">
                <a href="https://twitter.com/intent/tweet?button_hashtag=RentAHouse&ref_src=twsrc%5Etfw" class="twitter-hashtag-button" data-show-count="false">Tweet #RentAHouse</a>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    <script src="~/js/createApartment.js"></script>
}
