@model IEnumerable<RentAHouse.Models.Apartment>
@using RentAHouse.Models;

@{
    ViewData["Title"] = "Index";
}

<h2>Search for your next house</h2>
<form>
    <div class="form-group">
        <label for="Region">Which Region?</label>
        <select asp-items="@Html.GetEnumSelectList<District>()" onchange="onRegionSelected(this.value)" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="City">Which City?</label>
        <select id="selectCity" asp-items="ViewBag.Cities" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="RoomNumber">How many rooms?</label>
        <input type="number" class="form-control" id="roomNum">
    </div>
    <div class="form-group">
        <label for="minPrice">Minimum price</label>
        <input type="number" class="form-control" id="minPrice">
    </div>
    <div class="form-group">
        <label for="maxPrice">Maximum price</label>
        <input type="number" class="form-control" id="maxPrice">
    </div>
    <input type="button" class="btn btn-success btn-lg" onclick="onSearch()" value="Search" />
</form>

<table id="apartmentsTable" style="display: none" class="table">
    <thead>
        <tr>
            <th>
                Street
            </th>
            <th>
                Nº
            </th>
            <th>
                City
            </th>
            <th>
                Rooms
            </th>
            <th>
                Size
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody id="tableBody"></tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLongTitle">Apartment Details</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Street</th>
                            <td id="modelStreet"></td>
                        </tr>
                        <tr>
                            <th>Number</th>
                            <td id="modelNumber"></td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td id="modelCity"></td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td id="modelPrice"></td>
                        </tr>
                        <tr>
                            <th>Size</th>
                            <td id="modelSize"></td>
                        </tr>
                        <tr>
                            <th>Rooms</th>
                            <td id="modelRooms"></td>
                        </tr>
                        <tr>
                            <th>Floor</th>
                            <td id="modelFloor"></td>
                        </tr>
                        <tr>
                            <th>Tax</th>
                            <td id="modelCityTax"></td>
                        </tr>
                        <tr>
                            <th>Building Tax</th>
                            <td id="modelBuildingTax"></td>
                        </tr>
                        <tr>
                            <th>Renovated</th>
                            <td id="modelRenovated"></td>
                        </tr>
                        <tr>
                            <th>Pets</th>
                            <td id="modelPets"></td>
                        </tr>
                        <tr>
                            <th>Elevator</th>
                            <td id="modelElevator"></td>
                        </tr>
                        <tr>
                            <th>Furniture</th>
                            <td id="modelFurniture"></td>
                        </tr>
                        <tr>
                            <th>Enter Date</th>
                            <td id="modelDate"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Property owner</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr style="text-align: left;">
                            <td id="modelOwnerName"></td>
                            <td id="modelOwnerRate"></td>
                            <td style="text-align: right;"><button type="button" class="btn btn-primary">Contact Owner</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js//apartmentView.js"></script>
}