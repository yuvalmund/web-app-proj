@model IEnumerable<RentAHouse.Models.City>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Details">
    <input type="text" name="name" placeholder="City name" />
    <input type="submit" class="btn" value="Search"/>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GraduatesPercents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mayor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.avarageSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numOfResidents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.region)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GraduatesPercents)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mayor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.avarageSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numOfResidents)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.region)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
